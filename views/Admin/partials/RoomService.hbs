<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/RoomService.css" />
    <title>Quản lý Dịch Vụ Khách Sạn</title>
  </head>

  <body>

    <div class="layout">
      <div class="room-container">
        <div class="room-search">
          <p>QUẢN LÝ DỊCH VỤ PHÒNG</p>
          <div class="service-search-btn">
            <div class="room-search-create">Thêm Dịch Vụ</div>
          </div>
        </div>
        <div class="room-table">
          <table>
            <thead>
              <tr>
                <th>STT</th>
                <th>TÊN</th>
                <th>CHỨC NĂNG</th>

              </tr>
            </thead>
            <tbody>

            </tbody>

          </table>
        </div>
      </div>
    </div>
    <div class="popup-overlay">
    </div>
    <div id="imagePopupOverlay">
      <div class="popup-content">
        <div class="top-header">
          <span class="close-btn">&times;</span>
          <h2>Image Details</h2>
        </div>

        <div class="image-container">
          <!-- Danh sách ảnh sẽ được tạo và thêm vào đây bằng JavaScript -->
        </div>
        <div class="button-row">
          <button id="addImageButton">Add Image</button>
          <input type="file" id="imageInput" style="display: none;" multiple />
          <button id="confirm">Confirm</button>
        </div>

      </div>
    </div>
    <div class="custom-popup-overlay">
      <div class="custom-popup">
        <span class="custom-close-btn">&times;</span>
        <h2>Thêm phòng</h2>
        <form id="signupForm">
          <label>Số sao</label>
          <select
            class="form-select"
            name="Số sao khách sạn đạt chuẩn"
            id="service-room"
          >

          </select>
          <input type="submit" class="dkbutton" value="Thêm mới" />
        </form>
      </div>
    </div>
