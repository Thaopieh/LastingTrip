    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/userInfo.css">
    <link rel="stylesheet" href="/css/myBooking.css">
</head>

<body>
    {{>header}}


    <div class="overlay" id="overlay">
        <div class="popup">
            <button class="close-btn">X</button>
            <h3>EDIT PROFILE</h3>
            <form id="editForm">
                <div class="form-group">
                    <label for="displayName">Tên</label>
                    <input type="text" name="displayName" id="displayName" placeholder="">
                </div>
                <div class="form-group">
                    <label for="gender">Giới tính</label>
                    <input type="text" name="gender" id="gender" placeholder="">
                </div>
                <div class="form-group">
                    <label for="dateOfBirth">Ngày sinh</label>
                    <input type="date" name="dateOfBirth" id="dateOfBirth" placeholder="">
                </div>
                <div class="form-group">
                    <label for="address">Địa chỉ</label>
                    <input type="text" name="Address" id="Address" placeholder="">
                </div>
                <div class="button-edit-container savebutton">
                    <button type="button" class="savebutton" onclick="saveChanges()">Save</button>
                </div>
            </form>
        </div>
    </div>
    <section>
        <div class="main_body">
            <div class="body_container">
                <div class="body_left">
                    <div class="member">
                        <i class="fa-solid fa-user"></i><span>Thành viên</span>
                    </div>
                    <div class="booking-detail">
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-primary "><a href="myBooking">My bookings</a>
                            </li>
                            <li class="list-group-item"><a href="#">Xem gần đây</a></li>
                            <li class="list-group-item"><a href="#">Thẻ quà tặng</a></li>
                            <li class="list-group-item "><a href="#">Thông tin cá nhân</a></li>
                            <li class="list-group-item"><a href="#">Đăng xuất</a></li>
                        </ul>
                    </div>

                </div>
                <div class="body_right">
                    <div class="online-empty-container">
                        {{!-- <div class="empty-image-con"></div>
                        <div class="empty-content-con">
                            <div class="empty-title">Bạn không có bất kỳ đặt chỗ nào hoặc chúng tôi không thể truy cập
                                các đặt chỗ của bạn vào lúc này. Bạn có thể tìm kiếm các đặt phòng bạn đã thực hiện với
                                tư cách là khách trong năm qua bằng địa chỉ email của mình.</div>

                        </div> --}}
                    </div>
                    <div class="card mb-3 booking-container">

                    </div>
                </div>


    </section>

    <!-- footer  -->
    {{>footer}}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script src="../js/myBooking.js"></script>

</body>

</html>