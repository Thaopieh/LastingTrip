<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/coupons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/coupons.js"></script>
    <title>Coupon</title>
</head>

<body>
    {{> sidebar}}
    <div class='layout'>
        <div class='coupons-container'>
            <div class='coupons-search'>
                <p>MANAGE COUPONS</p>
                <div class='coupons-search-btn'>
                    <div class='coupons-search-create'>+ Create</div>
                </div>
            </div>
            <div class='coupons-table'>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>CODE</th>
                        <th>PERCENT</th>
                        <th>BEGIN</th>
                        <th>END</th>
                        <th>ACTION</th>
                    </tr>
                    {{#each datatable}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.code}}</td>
                        <td>{{this.percent}}</td>
                        <td>{{this.begin}}</td>
                        <td>{{this.end}}</td>
                        <td>
                            <button type="button" class="editCoupon" value={{this.id}}>Edit</button>
                            <button type="button" class="deleteCoupon" value={{this.id}}>Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
