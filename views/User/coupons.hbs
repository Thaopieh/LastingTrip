                    {{!-- </div> --}}
                {{!-- <input type="submit" class="crbutton" value="Create"> --}}
                {{!-- </form> --}}
            {{!-- </div> --}}
    </div>
    <div class="coupon-popup-overlay">
        <div class="coupon-popup">
            <span class="coupon-close-btn">&times;</span>
            <h2>Coupon-Form</h2>
            <form id="CouponForm">
                <input type="text" id="code" name="code" placeholder="Code" autocomplete="current-text">
                <input type="text" id="percent" name="percent" placeholder="percent" autocomplete="current-percent">
                <div class="input-group">
                    <input type="date" id="begin" name="begin" autocomplete="current-date">
                    <input type="date" id="end" name="end" autocomplete="current-date">
                </div>
                <input type="submit" class="crbutton" value="Create">
            </form>
        </div>
    </div>
    <div class="coupon-popup-overlay-delete">
        <div class="coupon-popup-delete">
            <h2>Success!</h2>
            <p>Coupon deleted successfully.</p>
            <button class="close-btn1">Close</button>
        </div>
    </div>
